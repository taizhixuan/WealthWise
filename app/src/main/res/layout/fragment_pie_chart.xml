<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.analytics.PieChartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Month Selection Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingVertical="@dimen/spacing_sm">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_md"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_jan"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_feb"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mar"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_apr"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apr" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_may"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="May" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_jun"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jun" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_jul"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jul" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_aug"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aug" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sep"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sep" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_oct"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_nov"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nov" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_dec"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height"
            android:layout_marginHorizontal="@dimen/spacing_md" />

        <!-- Category Legend -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_legend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_md"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/spacing_md"
            tools:listitem="@layout/item_legend"
            tools:itemCount="6" />

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_analytics"
            android:contentDescription="@string/no_data"
            app:tint="?attr/colorOnSurfaceVariant"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="@string/no_data"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant" />
    </LinearLayout>

</FrameLayout>

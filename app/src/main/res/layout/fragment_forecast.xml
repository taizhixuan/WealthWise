<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.forecast.ForecastFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Projected Balance Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_projected_balance"
            style="@style/Widget.WealthWise.CardView.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/projected_balance"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <TextView
                    android:id="@+id/tv_projected_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textAppearance="?attr/textAppearanceHeadlineLarge"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textStyle="bold"
                    tools:text="$12,450.00" />

                <TextView
                    android:id="@+id/tv_projected_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    tools:text="in 30 days" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Period Toggle Group -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:checkedButton="@+id/btn_30_days"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_30_days"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forecast_30d" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_60_days"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forecast_60d" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_90_days"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forecast_90d" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Forecast Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_forecast_chart"
            style="@style/Widget.WealthWise.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/projected_balance"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/forecast_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/spacing_sm" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Category Forecasts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="@string/category_forecast"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category_forecasts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/item_forecast_category" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

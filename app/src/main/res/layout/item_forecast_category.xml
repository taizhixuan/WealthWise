<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingHorizontal="@dimen/spacing_xs"
    android:paddingVertical="12dp">

    <!-- Category Icon -->
    <ImageView
        android:id="@+id/iv_category_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Category icon"
        android:padding="6dp"
        android:src="@drawable/ic_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white"
        tools:background="@drawable/circle_background" />

    <!-- Category Name -->
    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/spacing_sm"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        app:layout_constraintEnd_toStartOf="@id/tv_projected_amount"
        app:layout_constraintStart_toEndOf="@id/iv_category_icon"
        app:layout_constraintTop_toTopOf="@id/iv_category_icon"
        tools:text="Food &amp; Dining" />

    <!-- Current Monthly Average -->
    <TextView
        android:id="@+id/tv_monthly_average"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/spacing_xxs"
        android:layout_marginEnd="@dimen/spacing_sm"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toStartOf="@id/tv_projected_amount"
        app:layout_constraintStart_toEndOf="@id/iv_category_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_category_name"
        tools:text="Avg: $420/mo" />

    <!-- Projected Amount -->
    <TextView
        android:id="@+id/tv_projected_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$450.00" />

    <!-- Change Indicator -->
    <LinearLayout
        android:id="@+id/layout_change_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxs"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_projected_amount">

        <ImageView
            android:id="@+id/iv_change_arrow"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="Change direction"
            android:src="@drawable/ic_arrow_up"
            tools:tint="#D32F2F" />

        <TextView
            android:id="@+id/tv_change_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xxs"
            android:textAppearance="?attr/textAppearanceLabelSmall"
            tools:text="+7.1%"
            tools:textColor="#D32F2F" />

    </LinearLayout>

    <!-- Divider -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
